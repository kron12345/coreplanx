{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Backend: NestJS debug",
      "type": "pwa-node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run",
        "start:debug"
      ],
      "cwd": "${workspaceFolder}/backend",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "autoAttachChildProcesses": true,
      "skipFiles": [
        "<node_internals>/**"
      ],
      "env": {
        "NODE_ENV": "development"
      }
    },
    {
      "name": "Backend: attach to running Nest",
      "type": "pwa-node",
      "request": "attach",
      "port": 9229,
      "address": "localhost",
      "restart": true,
      "cwd": "${workspaceFolder}/backend",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "sourceMaps": true
    },
    {
      "name": "Frontend: Angular in Chrome",
      "type": "pwa-chrome",
      "request": "launch",
      "preLaunchTask": "frontend: start",
      "url": "http://localhost:4200",
      "webRoot": "${workspaceFolder}/frontend/src",
      "sourceMaps": true,
      "runtimeArgs": [
        "--remote-allow-origins=*"
      ],
      "internalConsoleOptions": "neverOpen"
    }
  ],
  "compounds": [
    {
      "name": "Fullstack: backend + frontend",
      "configurations": [
        "Backend: NestJS debug",
        "Frontend: Angular in Chrome"
      ]
    }
  ]
}
